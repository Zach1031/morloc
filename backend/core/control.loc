@type
# The type signature of map SHOULD be:
#   map :: (a -> b) -> [a] -> [b]
# However, I don't yet support generics
map :: * -> * -> *

@alias
map :: loc_map


@source R

loc_map <- function(f, x){
    lapply(x, f)
}


@source sh

loc_map (){
    fun=$1
    file=$2
    while read x
    do
        $fun $x
    done < $file
}


@source py

# aliased as map
def loc_map(f, xs):
    list( map(f, xs) )

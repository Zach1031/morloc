@type
# The type signature of map SHOULD be:
#   map :: (a -> b) -> [a] -> [b]
# However, I don't yet support generics
map :: * -> * -> *

@source R

map <- function(f, x){
    lapply(x, f)
}

@source sh

map (){
    fun=$1
    file=$2
    while read x
    do
        $fun $x
    done < $file
}

@source py

def loc_map(f, xs):
    list( map(f, xs) )

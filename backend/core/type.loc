@type
native_to_universal :: * -> String -> File -> String
universal_to_native :: String -> String -> *


@source R

# Convert native data structure to file or literal
native_to_universal <- function(x, type, outdir){
  f <- ""

  if(type %in% c("Int", "Num", "String", "File")){
    f <- as.character(x)
  } else if(type == "Bool"){
    f <- as.character(as.integer(x))
  } else if(type == "void"){
    f <- ""
  } else {
    f <- tempfile(pattern="m1_R_", tmpdir=outdir, fileext=".out")
    require(readr)
    if(is.data.frame(x)){
      write_tsv(x, path=f)
    } else if(is.list(x)) {
      write(unlist(x), file=f, ncolumns=1)
    } else if(is.vector(x)) {
      write(x, file=f, ncolumns=1)
    } else {
      msg = sprintf("R: Cannot export object of class '%s'", class(x))
      warning(msg)
      f = ""
    }
  }
  f
}

# Convert text or binary to native data structure
loc_number_types  <- c("Int", "[Int]", "Num", "[Num]")
loc_string_types  <- c("String", "[String]", "File")
loc_logical_types <- c("Bool", "[Bool]")

loc_types <- list(
    "Int"    = as.integer,
    "Num"    = as.numeric,
    "String" = as.character,
    "File"   = as.character,
    "Bool"   = function(x) { as.logical(as.integer(x)) },
    "Text"   = read_lines,
    "void"   = function(x) { NULL }
)

loc_is_list <- function(type){ grepl("^\\[[^[]", type) }
loc_is_table <- function(type){ grepl("^\\[\\[[^[]", type) }

universal_to_native <- function(x, type){
  if(loc_is_list(type)){
    d <- read_tsv(x, col_names=FALSE)[[1]]
  } else if (loc_is_table(type)){
    d <- read_tsv(x, col_names=FALSE)
  } else if(type %in% names(loc_types)){
    d <- loc_types[[type]](x)
  } else {
    msg <- "(R) Unsupported type '%s' treated as literal"
    warning(sprintf(msg, type))
    d <- x
  }
  d
}



@source sh

native_to_universal (){
    x=$1
    vtype=$2
    outdir=$3
    if [[ $vtype == "Int"    ||
          $vtype == "String" ||
          $vtype == "Num"    ||
          $vtype == "Bool"   ||
          $vtype == "File" ]]
    then
        echo "$x"
    elif [[ $vtype == "void" ]]
    then
        echo -n ""
    else
        tmpfile=$outdir/sh_$RANDOM$RANDOM
        touch $tmpfile || echo "Cannot write to temporary file $tmpfile" >&2
        if [[ -r $x ]]
        then
            cat $x > $tmpfile
            echo "$tmpfile"
        else
            echo "Type ($vtype) input error, expected file" >&2
        fi
    fi
}

universal_to_native (){
    x=$1
    vtype=$2
    if [[ $vtype == "Int"    ||
          $vtype == "String" ||
          $vtype == "Num"    ||
          $vtype == "Bool"   ||
          $vtype == "File" ]]
    then
        echo "$x"
    elif [[ $vtype == "void" ]]
    then
        echo -n ""
    else
        if [[ -r "$x" ]]
        then
            cat "$x"
        else
            echo "(sh) cannot cat file '$x' (type='$2')" >&2
        fi
    fi
}


@source py

import tempfile

def __loc_parse_list(x, typ):
    if not isinstance(x, (list, tuple, set)):
        msg = "Expected iterable class for input of type '%s', got '%s'"
        print(msg % (str(type(x))), file=sys.stderr)

    typ = typ[1:-1]
    if typ[0] == '[':
        x = ["\t".join([str(s) for s in ss]) for ss in x]
        typ = typ[1:-1]

    if typ[0] == '[':
        msg = "Arrays of dimension greater than 2 are not supported (in type '[[%s]]')"
        print(msg % typ, file=sys.stderr)


    return (str(s) for s in x)

# Convert native data structure to file or literal
def native_to_universal(x, typ, outdir):
    f = None
    if typ in ("String", "File"):
        f = str(x)
    elif typ == "Int":
        f = int(x)
    elif typ == "Num":
        f = float(x)
    elif typ == "Bool":
        f = 1 if x else 0
    elif typ == "void":
        f = ""
    else:
        tmp = tempfile.NamedTemporaryFile(
            prefix = "py_%s_" % typ,
            dir    = outdir,
            delete = False
        )
        f = tmp.name

        if isinstance(x, dict):
            x = x.items()

        data = None

        if typ[0] == '[':
            data = '\n'.join(__loc_parse_list(x, typ))
        elif typ == "Text":
            if isinstance(x, (list,tuple,set)):
                data = "\n".join((str(s) for s in x))
            else:
                data = str(x)
        else:
            msg = "Py: Cannot object of type '%s' ('%s'), guessing"
            print(msg % (typ, type(x)), file=sys.stderr)
            data = str(x)

        tmp.write(data.encode("ASCII"))
        tmp.write("\n".encode("ASCII"))

    return str(f)

# Convert text or binary to native data structure
loc_number_types  = ("Int", "[Int]")
loc_string_types  = ("String", "[String]", "File")
loc_logical_types = ("Bool", "[Bool]")
loc_caster = {
    "Int":int,
    "Num":float,
    "String":str,
    "File":str,
    "Bool":bool,
    "*":str
}

def universal_to_native(x, typ):
    if typ in loc_caster:
        d = loc_caster[typ](x)
    elif typ == "void":
        d = ""
    elif typ == "Text":
        with open(x.rstrip(), "r") as f:
            d = [s.rstrip() for s in f.readlines()]
    elif typ[0] == '[':
        with open(x.strip(), "r") as f:
            d = [s.rstrip() for s in f.readlines()]
        if typ[1] == '[':
            try:
                cast = loc_caster[typ[2:-2]]
            except KeyError:
                cast = str
            d = [[cast(s) for s in ss.split("\t")] for ss in d]
        else:
            try:
                cast = loc_caster[typ[1:-1]]
            except KeyError:
                cast = str
            d = [cast(s) for s in d]
    else:
        d = str(x)
    return d

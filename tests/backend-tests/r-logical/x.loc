@include
core/atomic

@export
say_hi
say_bi

@type
is_a ,
is_b ,
is_c ,
is_d :: Void -> Bool

say_hi ,
say_bi :: Void -> String

@path
say_hi say_bi

@lang
* :: R

@check
say_hi :: and . is_a (any . is_b is_c (not . is_d))
say_bi :: not . and . is_a (any . is_b is_c (not . is_d))

@source R
is_a <- function() { TRUE  }
is_b <- function() { TRUE  }
is_c <- function() { FALSE }
is_d <- function() { FALSE }

say_hi <- function() { "hi" }
say_bi <- function() { "bi" }

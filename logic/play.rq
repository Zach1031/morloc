# Find all triples where types are not URIs
CONSTRUCT {
    ?s ?p ?o
}
WHERE {
    ?s <rdf:type> ?o .
    FILTER(!(isURI(?o)))
}

# Find all subjects/objects where object is not a URI
SELECT ?s ?o
WHERE {
    ?s <rdf:type> ?o .
    FILTER(!(isURI(?o)))
}

# Assert the object of any `rdf:type` predicate is a URI 
# This is a check of the Morloc implementation, not user input
ASK
WHERE {
    ?s <rdf:type> ?o .
    FILTER(!(isURI(?o)))
}

ASK
WHERE {
    ?s <rdf:lhs> ?o
    FILTER((isURI ?s) && (!isURI ?o))
}
